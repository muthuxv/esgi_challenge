<!DOCTYPE html>

<title>Mission</title>

{% block body %}
    <h1>Mission</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mission.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ mission.name }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ mission.missionType.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ mission.description }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ mission.location }}</td>
            </tr>
            <tr>
                <th>Result</th>
                <td>{{ mission.result }}</td>
            </tr>
             <tr>
                <th>Héro</th>
                <td>{{ mission.hero and mission.hero.heroName ? mission.hero.heroName : 'Pas de héro assigné' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ mission.status }}</td>
            </tr>
            <tr>
                <th>Crée à</th>
                <td>{{ mission.createdAt ? mission.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modifié à</th>
                <td>{{ mission.updatedAt ? mission.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date de fin</th>
                <td>{{ mission.dateEnd ? mission.dateEnd|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('front_mission_index') }}">Retour</a>

    {{ include('front/mission/_delete_form.html.twig') }}
{% endblock %}
