{% extends 'base_back.html.twig' %}

{% block title %}Liste des paiments{% endblock %}

{% block body %}
    <h1 class="text-3xl text-black pb-6">Les paiements</h1>

    <div class="w-full mt-12">
        <div class="flex flex-wrap -mx-3">
            <div class="flex-none w-full max-w-full px-3">
                <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 border-transparent border-solid shadow-soft-xl rounded-2xl bg-clip-border shadow-lg">
                    <div class="p-6 pb-0 mb-0 bg-white border-b-0 border-b-solid rounded-t-2xl border-b-transparent">
                        <h6>La liste des paiments</h6>
                    </div>

                    <!-- component -->
                    <div class="overflow-x-auto rounded-lg border border-gray-200 shadow-md m-5">
                        <table class="w-full border-collapse bg-white text-left text-sm text-gray-500">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th scope="col" class="px-6 py-4 font-medium text-gray-900">Nom de l'évènement</th>
                                    <th scope="col" class="px-6 py-4 font-medium text-gray-900">Utilisateur</th>
                                    <th scope="col" class="px-6 py-4 font-medium text-gray-900">Prix</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-100 border-t border-gray-100">
                                {% for event_payment in event_payments %}
                                    <tr class="hover:bg-gray-50">
                                        <td class="px-6 py-4">{{ event_payment.eventName }}</td>
                                        <td class="px-6 py-4">{{ event_payment.userFirstname }} {{ event_payment.userLastname }}</td>
                                        <td class="px-6 py-4">{{ event_payment.eventPrice }}</td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="11">Pas encore de paiement</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}