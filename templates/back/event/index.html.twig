{% extends 'base_back.html.twig' %}

{% block title %}Liste des évènements{% endblock %}

{% block body %}
    <h1 class="text-3xl text-black pb-6">Les évènements</h1>

    <div class="w-full mt-12">
        <div class="flex flex-wrap -mx-3">
            <div class="flex-none w-full max-w-full px-3">
                <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 border-transparent border-solid shadow-soft-xl rounded-2xl bg-clip-border shadow-lg">
                    <div class="p-6 pb-0 mb-0 bg-white border-b-0 border-b-solid rounded-t-2xl border-b-transparent">
                        <h6>La liste des évènements</h6>
                    </div>

                    <!-- component -->
                    <div class="overflow-x-auto rounded-lg border border-gray-200 shadow-md m-5">
                        <table class="w-full border-collapse bg-white text-left text-sm text-gray-500">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th scope="col" class="px-6 py-4 font-medium text-gray-900">Name</th>
                                    <th scope="col" class="px-6 py-4 font-medium text-gray-900">Description</th>
                                    <th scope="col" class="px-6 py-4 font-medium text-gray-900">Date</th>
                                    <th scope="col" class="px-6 py-4 font-medium text-gray-900">Price</th>
                                    <th scope="col" class="px-6 py-4 font-medium text-gray-900">Location</th>
                                    <th scope="col" class="px-6 py-4 font-medium text-gray-900">Filename</th>
                                    <th scope="col" class="px-6 py-4 font-medium text-gray-900">Modifié à</th>
                                    <th scope="col" class="px-6 py-4 font-medium text-gray-900">Vérifié</th>
                                    <th scope="col" class="px-6 py-4 font-medium text-gray-900">actions</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-100 border-t border-gray-100">
                                {% for event in events %}
                                    <tr class="hover:bg-gray-50">
                                        <td class="px-6 py-4">{{ event.name }}</td>
                                        <td class="px-6 py-4">{{ event.description }}</td>
                                        <td class="px-6 py-4">{{ event.date|date('d-m-Y H:i:s') }}</td>
                                        <td class="px-6 py-4">{{ event.price }}</td>
                                        <td class="px-6 py-4">{{ event.location }}</td>
                                        <td class="px-6 py-4">{{ event.filename }}</td>
                                        <td class="px-6 py-4">{{ event.createdAt|date('d-m-Y H:i:s') }}</td>
                                        <td class="px-6 py-4">{{ event.updatedAt|date('d-m-Y H:i:s') }}</td>
                                        <td class="px-6 py-4">
                                            <a href="{{ path('back_event_show', {'id': event.id}) }}">Voir</a>
                                            <a href="{{ path('back_event_edit', {'id': event.id}) }}">Modifier</a>
                                            {{ include('back/event/_delete_form.html.twig') }}
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="11">Pas encore d'évènement</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="max-w-sm w-64 rounded overflow-hidden shadow-lg">
                    <div class="px-6 py-4">
                        <a href="{{ path('back_event_new') }}" class="no-underline hover:underline ...">Créer un évènement</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}