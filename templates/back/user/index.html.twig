<!DOCTYPE html>

<li><a href="{{ path('back_default_index') }}">Accueil</a></li>

<title>La liste des utilisateurs</title>

{% block body %}
    <h1>La liste des utilisateurs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Créé à</th>
                <th>Modifié à</th>
                <th>Vérifié</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.createdAt|date('d-m-Y') }}</td>
                <td>{{ user.updatedAt|date('d-m-Y') }}</td>
                <td>{{ user.isVerified ? 'Oui' : 'Non'}}</td>
                <td>
                    <a href="{{ path('back_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('back_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">pas d'enregistrements trouvés</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('back_user_new') }}">Create new</a>
{% endblock %}
