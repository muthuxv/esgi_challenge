{% extends 'base_front.html.twig' %}

{% block title %}Inscription Héro{% endblock %}

{% block body %}
{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}

    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}


    <section class="bg-gray-50 dark:bg-gray-900 md:py-48">
        <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
            <a href="#" class="flex items-center mb-6 text-2xl font-semibold text-gray-900 dark:text-white">
                <img class="h-8 mr-3" src="{{ asset('build/images/hero-call-logo.png') }}" alt="logo">  
            </a>
            <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
                <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
                    <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
                        Inscription Héro
                    </h1>

                    {{ form_start(registrationForm, { 'attr': {'class': 'pace-y-4 md:space-y-6'} }) }}
                        {{ form_label(registrationForm.hero, 'Informations personnelles', {'label_attr': {'class': 'block mb-2 text-2xl font-medium text-gray-900 dark:text-white'}}) }}
                        {{ form_row(registrationForm.firstname) }}
                        {{ form_row(registrationForm.lastname) }}
                        {{ form_row(registrationForm.email) }}
                        {{ form_row(registrationForm.plainPassword) }}
                        {{ form_label(registrationForm.hero, 'Informations Hero', {'label_attr': {'class': 'block mb-2 text-2xl font-medium text-gray-900 dark:text-white'}}) }}
                        {{ form_errors(registrationForm.hero) }}
                        {{ form_row(registrationForm.hero.name, {'attr': {'class':'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5'}} ) }}
                        {{ form_row(registrationForm.hero.avatar) }}
                        {{ form_row(registrationForm.agreeTerms) }}

                        <button type="submit" class="w-full text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">S'inscrire</button>
                        <p class="text-sm font-light text-gray-500 dark:text-gray-400">
                            Vous avez un compte ? <a href="/login" class="font-medium text-primary-600 hover:underline dark:text-primary-500">Connectez-vous</a>
                        </p>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}